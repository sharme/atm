                <!--</if>-->
                <!---->
            <!--</if>-->

            <!--<if test=" city != null">-->
                 <!--d_city = #{city}-->

                <!--<if test=" type != null">-->
                    <!--and d_type = #{type}-->
                <!--</if>-->
            <!--</>-->
            <!---->

        <!--</if>-->

        order by d_created_time limit #{count};



    </select>

    <select id="getDesignerById" resultType="com.atongmu.mvc.model.Designer" parameterType="map">
        select * from atm_designers where d_id = #{id};
    </select>


</mapper>